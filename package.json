{
  "name": "server",
  "version": "0.1.0",
  "bin": {
    "server": "bin/server.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "deploy:server": "cdk deploy",
    "deploy:client": "cd client && yarn build && aws s3 sync dist s3://portals-me-web/ --acl public-read",
    "deploy": "yarn deploy:server && yarn deploy:client"
  },
  "devDependencies": {
    "@types/node": "^8.9.4",
    "aws-cdk": "^0.20.0",
    "typescript": "^3.1.2"
  },
  "dependencies": {
    "@aws-cdk/aws-s3": "^0.20.0",
    "@aws-cdk/cdk": "^0.20.0"
  }
}
